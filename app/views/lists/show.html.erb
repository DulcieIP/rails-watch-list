<div class="container mt-3">

  <div class="d-flex align-items-center justify-content-between">
    <h1> <%= @list.name %> </h1>
    <div> <%= link_to "Go back to full list of lists", root_path, class: "btn btn-ghost btn-sm"%> </div>
  </div>


  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip mb-3">
          <img src="<%= bookmark.movie.poster_url %>">
          <div class="card-trip-infos">
            <div>
              <h2> <%= bookmark.movie.title %> </h2>
              <p> <%= bookmark.comment %> </p>
            </div>
            <%= link_to "Delete",
              bookmark_path(bookmark),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-ghost btn-sm"%>
        </div>
        </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-between">
    <div> <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %> </div>
    <div> <%= link_to "Delete the whole list", list_path(@list), data: { turbo_method: :delete }, class:"btn btn-ghost btn-sm"%> </div>
  </div>

</div>



